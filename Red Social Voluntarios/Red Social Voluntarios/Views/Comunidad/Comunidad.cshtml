@model List<Red_Social_Voluntarios.Models.Comunidad>

<h1 class="text-center">Comunidad</h1>
<div class="container text-center">
    <p>Bienvenido a la comunidad. Aquí puedes compartir tus ideas y dudas.</p>
    <a href="/Comunidad/Crear" class="btn btn-primary">Crear nueva publicación</a>
</div>


<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            @foreach (var post in Model)
            {
                <div class="comunidad-card rounded shadow-lg p-4 mt-3">
                    <h3>@post.Titulo</h3>
                    <p>@post.Contenido</p>
                </div>
            }
        </div>
    </div>
</div>
